.font-header
	font-family font-family-header

.tiles
	width (tile-width + tile-spacing) * 3

.tile-wrapper
	float left
	height tile-height
	margin tile-spacing * .5
	position relative
	width tile-width
	&, *
		box-sizing border-box
	*
		margin 0
		padding 0
	// optimized for displaying 9 tiles at a time
	&:nth-child(3n) .tile
		left auto
		right 0
	&:nth-child(n+7) .tile
		bottom 0
		top auto
.tile
	background #fff
	border-radius border-radius
	color color
	cursor pointer
	font-family font-family
	font-size type-base
	font-weight 200 //font-weight
	height tile-height
	left 0
	padding tile-header-height 0 tile-footer-height
	position absolute
	top 0
	if use-transitions
		transition all transition-speed
	width tile-width
	z-index z-index-1
	if use-transforms
		&:hover
			transform scale(1.1, 1.1)
			z-index z-index-3
	a
		text-decoration none
		if use-transitions
			transition all transition-speed
		&:hover
			text-decoration underline
.tile-header
.tile-content
	padding tile-padding
.tile-header
.tile-content
.tile-footer
	border-style solid
	if use-transitions
		transition all transition-speed
.tile-header
.tile-footer
	position absolute
	width 100%

// Tile Header
// ------------------------------------------------------------
.tile-header
	background color
	border-radius border-radius border-radius 0 0
	border-width tile-header-border tile-header-border 0
	font-family font-family-header
	left 0
	color color-inverse
	height tile-header-height
	top 0
	.icon
		opacity .5
		height 100%
		position absolute
		right tile-padding
		top tile-padding * -1.2
.tile-author
	color #fff !important
	// add right padding for the icons
	padding tile-padding * .15 tile-avatar-width 0 tile-padding
	time
		font-weight 200
		font-size type-small
		display block
		opacity .6
.has-profile-image .tile-author
	padding-left tile-avatar-width + tile-padding
.tile-author-avatar
.tile-author-name
	display block
.tile-author-avatar
	background rgba(0, 0, 0, .2)
	border tile-avatar-border solid rgba(0, 0, 0, .5)
	border-radius border-radius
	left tile-padding
	height tile-avatar-height
	position absolute
	top tile-padding
	width tile-avatar-width
.tile-author-name
	font-size type-larger
	if tile-author-name-margin
		margin tile-author-name-margin

// Tile Content
// ------------------------------------------------------------
.tile-content
	background tile-content-bg
	border-width tile-content-border
	font-size type-base
	padding tile-content-padding
	margin tile-content-margin
	height 100%
	if tile-content-spacing and border-radius
		border-radius border-radius

// Tile Footer
// ------------------------------------------------------------
.tile-footer
	border-radius 0 0 border-radius border-radius
	border-width tile-footer-border
	border-top 0
	bottom 0
	font-size type-smallest
	height tile-footer-height
	line-height tile-footer-height
	width 100%
	a
		color rgba(255, 255, 255, .7)
		&:hover
			color rgba(255, 255, 255, 1)

// Expanded tiles
// ------------------------------------------------------------
.is-expanded
	height tile-height * 2 + tile-spacing
	z-index z-index-2

use-light-footer = true

// Post source colors
// ------------------------------------------------------------
tile-type(color)
	//background-color color
	border border-width solid color
	.tile-header
		background-color color
		border-color darken(color, tile-bg-shade)
	&:hover
		.tile-header
		.tile-footer
			background-color darken(color, tile-bg-shade)
	.tile-content
		border-color darken(color, tile-bg-shade)
		&:before
			border-bottom-color darken(color, tile-bg-shade + 0%)
	.tile-content
	.tile-footer
		a
			color darken(color, tile-bg-shade)
			&:hover
				color lighten(color, tile-bg-shade)
	if use-light-footer
		.tile-content
		.tile-footer
			border 0
		.tile-footer
			background-color transparent !important
			border 0
			border-top 1px solid rgba(color, .3)
			margin 0 tile-padding * 2
			width tile-width - tile-padding * 4 - border-width
	if use-gradient
		.tile-header
			background-image linear-gradient(color, 95% darken(color, tile-bg-shade), 100% darken(color, tile-bg-shade + 8%))
		.tile-footer
			background-image linear-gradient(darken(color, tile-bg-shade + 50%), 5% darken(color, tile-bg-shade), 100% darken(color, tile-bg-shade + 10%))
.tile--facebook
	tile-type(color-facebook)
.tile--twitter
	tile-type(color-twitter)
.tile--gplus
	tile-type(color-gplus)
.tile--linkedin
	tile-type(color-linkedin)
.tile--rss
	tile-type(color-rss)

// Media tiles
// ------------------------------------------------------------
.has-media
	background #000
	if border-width
		border border-width solid #333
	else
		border 1px solid #333
	overflow hidden
	a
		color #fff
	.tile-header
	.tile-text
	.tile-footer
		color rgba(255, 255, 255, .8)
		border 0
		if use-transitions
			transition margin 300ms
		z-index z-index-3
	.tile-header
	.tile-text
		background rgba(0, 0, 0, .5)
	.tile-header
		margin-top -100%
	.tile-content
		position static
	.tile-text
		bottom 0
		left 0
		height 0
		line-height tile-footer-height
		margin-bottom tile-footer-height * -1
		overflow hidden
		position absolute
		width 1000px
	.tile-footer
		margin-bottom tile-footer-height * -1
		padding 0 !important
		a
			background rgba(0, 0, 0, 1)
			padding tile-padding tile-padding * 2

	&.is-expanded
	&:hover
		.tile-text
			animation marquee 5s linear infinite
			height tile-footer-height
	&.is-expanded
		width tile-width * 2 + tile-spacing
	&:hover
		.tile-text
			margin-bottom 0
		.tile-header
			margin-top 0
		&.is-expanded
			.tile-footer
				margin-bottom 0

.tile-media
	bottom 0
	left 0
	margin auto
	position absolute
	right 0
	top 0
	width 100%
	z-index z-index-1


if use-arrow
	.tile-content
		position relative
		&:after
		&:before
			bottom 100%
			left tile-avatar-width * .5 + arrow-size * 2 - 2
			border solid transparent
			content " "
			height 0
			width 0
			position absolute
			pointer-events none
		&:after
			border-color transparent
			border-bottom-color tile-content-bg
			border-width arrow-size
			margin-left arrow-size * -1
		&:before
			border-color transparent
			border-width arrow-size + border-width
			margin-left (arrow-size + border-width) * -1

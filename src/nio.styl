@import 'nib'
@import 'icons/icons'
@import 'tiles/tiles'
@import 'graphs/graphs'

.u-pullLeft
	float left
.u-pullRight
	float right
.u-textTruncate
	overflow hidden
	text-overflow ellipsis
	white-space nowrap
.u-block
	display block

@keyframes marquee
	0%
		left 0
	100%
		left -100%

.u-marquee
	overflow hidden
	position relative
	width 420px
	div
		animation marquee 10s linear infinite
		display block
		height 100%
		overflow hidden
		position absolute
		width 200%
	span
		float left
		width 50%
	&:hover div
		animation-play-state paused
